{
  "name": "ToDo-Api-Example",
  "version": "1.0.0",
  "description": "",
  "repository": {
    "type": "git",
    "url": ""
  },
  "engines" : { "node" : "8.16.1" },
  "author": "Vlad Elagin",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "prestart": "npm run -s build",
    "start": "NODE_ENV=development node dist/index.js",
    "dev": "nodemon src/index.js --exec \"node -r dotenv/config -r babel-register\"",
    "clean": "rimraf dist",
    "build": "npm run clean && mkdir -p dist && babel src -s -D -d dist",
    "test": "NODE_ENV=test jest -i test",
    "lint": "eslint src test"
  },
  "dependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.4.0",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.17.1",
    "es6-promisify": "^5.0.0",
    "express": "^4.17.3",
    "express-jwt": "^5.3.0",
    "jsonwebtoken": "^8.0.1",
    "morgan": "^1.7.0",
    "rimraf": "^2.6.1",
    "sqlite3": "^3.1.13",
    "type-check": "^0.3.2",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-jest": "^21.0.2",
    "babel-plugin-module-resolver": "^3.1.0",
    "babel-register": "^6.24.1",
    "dotenv": "^4.0.0",
    "eslint": "^4.8.0",
    "eslint-config-airbnb-base": "^12.0.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^21.0.2",
    "eslint-watch": "^3.1.0",
    "jest": "^21.0.2",
    "module-resolver": "^1.0.0",
    "nodemon": "^1.11.0",
    "supertest": "^3.0.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      "transform-object-rest-spread",
      [
        "module-resolver",
        {
          "root": [
            "../../"
          ],
          "alias": {
            "@api": "./src/api",
            "@config": "./src/config",
            "@helpers": "./src/helpers",
            "@db": "./src/db",
            "@root": "./src"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "import",
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "airbnb-base"
    ],
    "rules": {
      "jest/no-focused-tests": 2,
      "jest/no-identical-title": 2,
      "import/no-extraneous-dependencies": 0,
      "import/extensions": 0,
      "import/no-unresolved": 0
    }
  },
  "jest": {
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "dist"
    ]
  },
  "directories": {
    "test": "test"
  }
}
